<UserControl x:Class="Quizzer.WPF.Admin.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:admin="clr-namespace:Quizzer.WPF.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance admin:AdministrationViewModel}">
    <StackPanel>
        <StackPanel Width="300" HorizontalAlignment="Left">
            <ListBox ItemsSource="{Binding Quizzes}" SelectionMode="Single" SelectedItem="{Binding SelectedQuiz}"/>
            <Button Command="{Binding SubmitAnswerCommand}" Content="Select Quiz"/>
        </StackPanel>
        <Button Content="SelectFile" Command="{Binding SelectFileCommand}"/>
    </StackPanel>
</UserControl>
